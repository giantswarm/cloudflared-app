{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "accountEmail": {
            "type": "string"
        },
        "accountId": {
            "type": "string"
        },
        "apiKey": {
            "type": "string"
        },
        "apiKeySecretName": {
            "type": "string"
        },
        "config": {
            "type": "object",
            "properties": {
                "loglevel": {
                    "type": "string"
                },
                "no-tls-verify": {
                    "type": "boolean"
                },
                "transport-loglevel": {
                    "type": "string"
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "initImage": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "namespace": {
            "type": "string"
        },
        "replicas": {
            "type": "integer"
        },
        "resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "serviceType": {
            "type": "string"
        },
        "tunnelSecretBase64": {
            "type": "string"
        },
        "tunnelSecretName": {
            "type": "string"
        },
        "useExistingTunnels": {
            "type": "object",
            "properties": {
                "credentialsSecretName": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                }
            }
        }
    }
}
